<div class="dashboard-container">
    <div class="dashboard-header mb-4">
        <div class="row align-items-center">
            <div class="col">
                <h1 class="h3 mb-0">
                    <i class="fas fa-tachometer-alt me-2" style="color: var(--primary-color)"></i>
                    Dashboard
                </h1>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-6">
            <div class="card h-100 dashboard-card">
                <div class="card-body">
                    <h5 class="card-title d-flex align-items-center mb-4">
                        <i class="fas fa-user-plus me-2" style="color: var(--primary-color)"></i>
                        Adicionar Login
                    </h5>
                    <form action="/admin/add-login" method="POST" class="animated-form">
                        <div class="mb-3 form-group">
                            <label class="form-label small fw-medium">Username</label>
                            <div class="input-group input-group-merge">
                                <span class="input-group-text bg-transparent border-end-0">
                                    <i class="fas fa-user text-secondary"></i>
                                </span>
                                <input type="text" class="form-control border-start-0 ps-0" name="username" required placeholder="Digite o username">
                            </div>
                        </div>
                        <div class="mb-3 form-group">
                            <label class="form-label small fw-medium">Password (opcional)</label>
                            <div class="input-group input-group-merge">
                                <span class="input-group-text bg-transparent border-end-0">
                                    <i class="fas fa-lock text-secondary"></i>
                                </span>
                                <input type="text" class="form-control border-start-0 ps-0" name="password" placeholder="Digite a senha">
                            </div>
                        </div>
                        <div class="mb-3 form-group">
                            <label class="form-label small fw-medium">Duração</label>
                            <div class="input-group input-group-merge">
                                <span class="input-group-text bg-transparent border-end-0">
                                    <i class="fas fa-clock text-secondary"></i>
                                </span>
                                <select class="form-select border-start-0 ps-0" name="duration" required>
                                    <option value="1week">1 Semana</option>
                                    <option value="1month">1 Mês</option>
                                    <option value="3month">3 Meses</option>
                                    <option value="permanent">Permanente</option>
                                </select>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary animated-button">
                            <span class="btn-content">
                                <i class="fas fa-plus me-2"></i>
                                <span>Adicionar</span>
                            </span>
                        </button>
                    </form>
                </div>
                <div class="card-shine"></div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card h-100 dashboard-card">
                <div class="card-body">
                    <h5 class="card-title d-flex align-items-center mb-4">
                        <i class="fas fa-key me-2" style="color: var(--primary-color)"></i>
                        Gerar Key
                    </h5>
                    <form action="/admin/generate-key" method="POST" class="animated-form">
                        <div class="mb-3 form-group">
                            <label class="form-label small fw-medium">Duração</label>
                            <div class="input-group input-group-merge">
                                <span class="input-group-text bg-transparent border-end-0">
                                    <i class="fas fa-clock text-secondary"></i>
                                </span>
                                <select class="form-select border-start-0 ps-0" name="duration" required>
                                    <option value="1week">1 Semana</option>
                                    <option value="1month">1 Mês</option>
                                    <option value="3month">3 Meses</option>
                                    <option value="permanent">Permanente</option>
                                </select>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary animated-button">
                            <span class="btn-content">
                                <i class="fas fa-magic me-2"></i>
                                <span>Gerar</span>
                            </span>
                        </button>
                    </form>
                </div>
                <div class="card-shine"></div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card h-100 dashboard-card">
                <div class="card-body">
                    <h5 class="card-title d-flex align-items-center mb-4">
                        <i class="fas fa-ban me-2" style="color: var(--primary-color)"></i>
                        Ban/Unban HWID
                    </h5>
                    <form action="/admin/ban" method="POST" class="mb-3 animated-form">
                        <div class="mb-3 form-group">
                            <label class="form-label small fw-medium">Identificador</label>
                            <div class="input-group input-group-merge">
                                <span class="input-group-text bg-transparent border-end-0">
                                    <i class="fas fa-fingerprint text-secondary"></i>
                                </span>
                                <input type="text" class="form-control border-start-0 ps-0" name="identifier" required placeholder="Digite o identificador">
                            </div>
                        </div>
                        <div class="mb-3 form-group">
                            <label class="form-label small fw-medium">Tipo</label>
                            <div class="input-group input-group-merge">
                                <span class="input-group-text bg-transparent border-end-0">
                                    <i class="fas fa-tag text-secondary"></i>
                                </span>
                                <select class="form-select border-start-0 ps-0" name="type" required>
                                    <option value="hwid">HWID</option>
                                    <option value="username">Username</option>
                                </select>
                            </div>
                        </div>
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger flex-grow-1 animated-button">
                                <span class="btn-content">
                                    <i class="fas fa-ban me-2"></i>
                                    <span>Banir</span>
                                </span>
                            </button>
                            <button type="submit" class="btn btn-success flex-grow-1 animated-button" formaction="/admin/unban">
                                <span class="btn-content">
                                    <i class="fas fa-check me-2"></i>
                                    <span>Desbanir</span>
                                </span>
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-shine"></div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card h-100 dashboard-card">
                <div class="card-body">
                    <h5 class="card-title d-flex align-items-center mb-4">
                        <i class="fas fa-sync me-2" style="color: var(--primary-color)"></i>
                        Reset HWID
                    </h5>
                    <form action="/admin/reset-hwid" method="POST" class="animated-form">
                        <div class="mb-3 form-group">
                            <label class="form-label small fw-medium">HWID</label>
                            <div class="input-group input-group-merge">
                                <span class="input-group-text bg-transparent border-end-0">
                                    <i class="fas fa-microchip text-secondary"></i>
                                </span>
                                <input type="text" class="form-control border-start-0 ps-0" name="hwid" required placeholder="Digite o HWID">
                            </div>
                        </div>
                        <button type="submit" class="btn btn-warning animated-button">
                            <span class="btn-content">
                                <i class="fas fa-sync me-2"></i>
                                <span>Resetar</span>
                            </span>
                        </button>
                    </form>
                </div>
                <div class="card-shine"></div>
            </div>
        </div>
    </div>

    <div class="card mt-4 dashboard-card">
        <div class="card-body">
            <h5 class="card-title d-flex align-items-center mb-4">
                <i class="fas fa-users me-2" style="color: var(--primary-color)"></i>
                Lista de Usuários
            </h5>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>HWID</th>
                            <th>Status</th>
                            <th>Expira em</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(user => { %>
                        <tr class="table-row">
                            <td><%= user.username %></td>
                            <td><span class="text-secondary"><%= user.hwid || 'Não definido' %></span></td>
                            <td>
                                <% if(user.hwidBanned) { %>
                                    <span class="badge bg-danger">Banido</span>
                                <% } else { %>
                                    <span class="badge bg-success">Ativo</span>
                                <% } %>
                            </td>
                            <td><span class="text-secondary"><%= moment(user.expirationDate).format('DD/MM/YYYY HH:mm') %></span></td>
                            <td>
                                <form action="/admin/remove-login/<%= user._id %>" method="POST" style="display: inline;">
                                    <button type="submit" class="btn btn-danger btn-sm animated-button">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-shine"></div>
    </div>
</div>

<style>
    :root {
        --text-primary: #ffffff;
        --text-secondary: #cbd5e1;
        --input-text: #ffffff;
        --label-color: #ffffff;
    }

    .dashboard-container {
        padding: 1.5rem 0;
    }

    .dashboard-header {
        background: linear-gradient(to right, var(--dark-surface), transparent);
        padding: 1.5rem;
        border-radius: 12px;
        margin-bottom: 2rem;
    }

    .dashboard-card {
        position: relative;
        border: 1px solid rgba(255, 255, 255, 0.05);
        background-color: var(--dark-surface);
        transition: all 0.3s ease;
        overflow: hidden;
    }

    .dashboard-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
    }

    .card-shine {
        position: absolute;
        top: 0;
        left: -100%;
        width: 50%;
        height: 100%;
        background: linear-gradient(
            to right,
            transparent,
            rgba(255, 255, 255, 0.05),
            transparent
        );
        transform: skewX(-15deg);
        transition: all 0.5s ease;
    }

    .dashboard-card:hover .card-shine {
        animation: shine 1.5s ease-in-out;
    }

    .animated-form .form-group {
        opacity: 0;
        transform: translateY(10px);
        animation: fadeInUp 0.5s ease forwards;
    }

    .animated-form .form-group:nth-child(1) { animation-delay: 0.1s; }
    .animated-form .form-group:nth-child(2) { animation-delay: 0.2s; }
    .animated-form .form-group:nth-child(3) { animation-delay: 0.3s; }

    .animated-button {
        position: relative;
        overflow: hidden;
        transition: all 0.3s ease;
    }

    .animated-button .btn-content {
        position: relative;
        z-index: 1;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .animated-button::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.1), transparent);
        transform: translateX(-100%);
    }

    .animated-button:hover::before {
        animation: shine 1.5s infinite;
    }

    .table-row {
        opacity: 0;
        animation: fadeIn 0.5s ease forwards;
    }

    .table-row:nth-child(1) { animation-delay: 0.1s; }
    .table-row:nth-child(2) { animation-delay: 0.2s; }
    .table-row:nth-child(3) { animation-delay: 0.3s; }
    .table-row:nth-child(4) { animation-delay: 0.4s; }
    .table-row:nth-child(5) { animation-delay: 0.5s; }

    .badge {
        position: relative;
        overflow: hidden;
    }

    .badge::after {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: linear-gradient(
            transparent,
            rgba(255, 255, 255, 0.1),
            transparent
        );
        transform: rotate(45deg);
        animation: badgeShine 2s infinite;
    }

    @keyframes shine {
        0% {
            left: -100%;
        }
        100% {
            left: 100%;
        }
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    @keyframes badgeShine {
        0% {
            transform: rotate(45deg) translateY(-100%);
        }
        100% {
            transform: rotate(45deg) translateY(100%);
        }
    }

    .input-group-merge {
        position: relative;
    }

    .input-group-text {
        border-color: rgba(255, 255, 255, 0.1);
        color: var(--text-primary) !important;
        opacity: 0.8;
    }

    .form-control, .form-select {
        background-color: var(--dark-surface-2);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: var(--input-text) !important;
    }

    .form-control:focus, .form-select:focus {
        background-color: var(--dark-surface-2);
        border-color: var(--primary-color);
        box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.15);
    }

    .form-control::placeholder {
        color: var(--text-secondary);
        opacity: 0.7;
    }

    .table {
        margin-bottom: 0;
        background-color: var(--dark-surface);
        color: var(--text-primary);
    }

    .table thead th {
        background-color: var(--dark-surface);
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        color: var(--text-primary) !important;
        font-weight: 500;
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.5px;
        padding: 1rem;
    }

    .table tbody tr {
        background-color: var(--dark-surface);
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        transition: all 0.3s ease;
        color: var(--text-primary);
    }

    .table tbody tr td {
        background-color: var(--dark-surface);
    }

    .table tbody tr:hover {
        background-color: var(--dark-surface-2);
    }

    .table td {
        padding: 1rem;
        vertical-align: middle;
        color: var(--text-primary) !important;
        background-color: var(--dark-surface);
    }

    .table td span:not(.badge) {
        color: var(--text-primary) !important;
    }

    .table tbody td .text-secondary {
        color: var(--text-primary) !important;
        opacity: 0.9;
    }

    .btn-sm {
        padding: 0.25rem 0.5rem;
        border-radius: 6px;
    }

    .card-title {
        color: var(--text-primary) !important;
        font-weight: 500;
    }

    .form-label {
        color: var(--label-color) !important;
        font-weight: 500;
        opacity: 0.9;
    }

    .text-secondary {
        color: var(--text-secondary) !important;
        opacity: 0.8;
    }

    .fas {
        color: var(--text-primary);
        opacity: 0.9;
    }

    .table-responsive {
        background-color: var(--dark-surface);
    }

    .card-body {
        background-color: var(--dark-surface);
    }
</style> 